{
  "name": "{{packageName}}",
  "version": "{{ lernaVersion }}",
  "description": "Default description for {{ name }}",
  "author": "Matt Penrice <matthew.penrice@gmail.com>",
  "homepage": "https://github.com/elmpp/{{org}}#readme",
  "license": "MIT",
  "keywords": [],
  "private": {{ ternary published "false" "true" }},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elmpp/{{org}}.git"
  },
  {{#equal transpile 'ts-tsc'}}
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  {{/equal}}
  {{#equal transpile 'ts-microbundle' }}
  "main": "dist/index.js",
  "source": "src/index.ts",
  "module": "dist/index.m.js",
  "types": "dist/index.d.ts",
  {{/equal}}
  {{#unless transpile}}
  "main": "index.js",
  {{/unless}}
  "scripts": {
    {{#if typescript}}
    "lint": "tsc --noEmit",
    {{else}}
    "lint": "echo ''",
    {{/if}}
    "postinstall": "cd ../.. && yarn postinstall",
    {{#if published}}
    "prepublishOnly": "yarn transpile",
    {{/if}}
    {{#equal transpile 'ts-tsc' }}
    "transpile": "tsc --module commonjs",
    "transpile-watch": "yarn transpile --watch",
    {{/equal}}
    {{#equal transpile 'ts-microbundle' }}
    "transpile": "peartree-build build-microbundle -f es,cjs,modern --target node",
    "transpile-watch": "peartree-build build-microbundle-watch -f es,cjs,modern --target node",
    {{/equal}}
    {{#match transpile '-webpack' }}
    "build": "NODE_ENV=production build-webpack-production",
    "dev": "NODE_ENV=development build-webpack-development",
    {{/match}}
    "": ""
  },
  "bugs": {
    "url": "https://github.com/elmpp/{{ org }}/issues"
  },
  "engines": {
    "node": ">=12.14.0"
  },
  {{#if published}}
  "publishConfig": {
    "access": "{{ ternary published "public" "restricted" }}"
  },
  {{/if}}
  "dependencies": {
  },
  "devDependencies": {
    {{#match transpile '-webpack' }}
    "@peartree/webpack-config-util": "*"
    {{else}}
      {{#equal transpile 'ts-tsc' }}
      {{else}}
    "@peartree/build-toolkit": "*",
    "@peartree/webpack-config-util": "*"
      {{/equal}}
    {{/match}}
  }
}
