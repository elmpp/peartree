{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "noEmit": true,
    "strict": false,
    "target": "es5",
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "typings/index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
